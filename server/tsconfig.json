{
	"extends": "@sapphire/ts-config",
	"compilerOptions": {
		"baseUrl": ".",
		"outDir": "dist",
		"rootDir": "src",
		"target": "ESNext",
		"module": "ESNext",
		"typeRoots": ["./types"],
		"allowSyntheticDefaultImports": true,
		"paths": {
			"#root/*": ["src/*"],
			"#routes/*": ["src/routes/*"],
			"#types/*": ["src/types/*"]
		}
	}
}
